        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Car"
                android:onClick="updateCar" />

        </LinearLayout>


    </LinearLayout>

</GridLayout>